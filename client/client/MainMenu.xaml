<Window x:Class="client.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client"
        mc:Ignorable="d"
        Title="MainMenu" Height="700" Width="250" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnGetRoomList" Content="Get List of Existing Rooms" HorizontalAlignment="Left" Height="50" Margin="10,0,0,0" VerticalAlignment="Top" Width="211" Click="btnGetRoomList_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="btnCreateRoom" Content="Create New Room" HorizontalAlignment="Left" Height="50" Margin="10,50,0,0" VerticalAlignment="Top" Width="211" Click="btnCreateRoom_Click" Grid.ColumnSpan="2"/>
        <ListView x:Name="lvwRooms" HorizontalAlignment="Left" Height="249" Margin="10,188,0,0" VerticalAlignment="Top" Width="211" RenderTransformOrigin="0.295,0.877" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="lblStatus" Content="" HorizontalAlignment="Left" Height="122" Margin="10,547,0,0" VerticalAlignment="Top" Width="211" Grid.ColumnSpan="2"/>
        <Button x:Name="btnJoinRoom" Content="Join Room" HorizontalAlignment="Left" Height="50" Margin="10,100,0,0" VerticalAlignment="Top" Width="211" Click="btnJoinRoom_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="btnMyStatus" Content="My Status" HorizontalAlignment="Left" Height="50" Margin="10,442,0,0" VerticalAlignment="Top" Width="211" Click="btnMyStatus_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="btnBestScores" Content="Best Scores" HorizontalAlignment="Left" Height="50" Margin="10,492,0,0" VerticalAlignment="Top" Width="211" Click="btnBestScores_Click" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
