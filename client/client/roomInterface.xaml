<Window x:Class="client.roomInterface"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client"
        mc:Ignorable="d"
        Title="roomInterface" Height="250" Width="500">
    <Grid>
        <Button x:Name="btnLeaveRoom" Content="Leave Room" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="150" Click="btnLeaveRoom_Click"/>
        <ListView x:Name="listViewUsers" HorizontalAlignment="Left" Height="160" Margin="150,0,0,0" VerticalAlignment="Top" Width="332">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="lblStatus" Content="" HorizontalAlignment="Left" Height="50" Margin="150,169,0,0" VerticalAlignment="Top" Width="337"/>
        <Button x:Name="btnStartGame" Content="Start Game (admin only)" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="150" Margin="0,50,0,0" Click="btnStartGame_Click"/>

    </Grid>
</Window>
