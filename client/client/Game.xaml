<Window x:Class="client.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client"
        mc:Ignorable="d"
        Title="Game" Height="450" Width="400">
    <Grid>
        <Button x:Name="btnAns1" Content="Button" HorizontalAlignment="Left" Height="50" Margin="50,61,0,0" VerticalAlignment="Top" Width="300" Click="btnAns1_Click"/>
        <Button x:Name="btnAns4" Content="Button" HorizontalAlignment="Left" Height="50" Margin="50,225,0,0" VerticalAlignment="Top" Width="300" Click="btnAns4_Click"/>
        <Button x:Name="btnAns3" Content="Button" HorizontalAlignment="Left" Height="50" Margin="50,170,0,0" VerticalAlignment="Top" Width="300" Click="btnAns3_Click"/>
        <Button x:Name="btnAns2" Content="Button" HorizontalAlignment="Left" Height="50" Margin="50,116,0,0" VerticalAlignment="Top" Width="300" Click="btnAns2_Click"/>
        <Label x:Name="lblQuestion" Content="Label" HorizontalAlignment="Left" Height="51" Margin="10,10,0,0" VerticalAlignment="Top" Width="372"/>
        <Label x:Name="lblTime" Content="Label" HorizontalAlignment="Left" Height="50" Margin="50,280,0,0" VerticalAlignment="Top" Width="50"/>
        <Label x:Name="lblStatus" Content="Label" HorizontalAlignment="Left" Height="34" Margin="0,385,0,0" VerticalAlignment="Top" Width="392"/>
        <Label x:Name="lblScore" Content="0/0" HorizontalAlignment="Left" Height="50" Margin="300,280,0,0" VerticalAlignment="Top" Width="50" FontSize="24"/>
        <Button x:Name="btnLeaveGame" Content="Leave Game" HorizontalAlignment="Left" Height="50" Margin="0,330,0,0" VerticalAlignment="Top" Width="392" Click="btnLeaveGame_Click"/>

    </Grid>
</Window>
