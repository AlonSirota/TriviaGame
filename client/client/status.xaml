<Window x:Class="client.status"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client"
        mc:Ignorable="d"
        Title="status" Height="300" Width="300">
    <Grid>
        <Label x:Name="lblGameNo" Content="Label" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="292"/>
        <Label x:Name="lblCorrectNo" Content="Label" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="292" Margin="0,50,0,0"/>
        <Label x:Name="lblWrongNo" Content="Label" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="292" Margin="0,100,0,0"/>
        <Label x:Name="lblAvgTime" Content="Label" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="292" Margin="0,150,0,0"/>
        <Button x:Name="btnExit" Content="OK" HorizontalAlignment="Left" Height="28" Margin="100,231,0,0" VerticalAlignment="Top" Width="182" Click="btnExit_Click"/>

    </Grid>
</Window>
